{
  "name": "rojeru-toast",
  "version": "2.6.1",
  "description": "Librer√≠a moderna de mensajes toast para aplicaciones web, compatible con todos los frameworks y HTML puro",
  "main": "dist/rojeru-toast.js",
  "module": "src/index.js",
  "style": "dist/rojeru-toast.css",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "rollup -c",
    "build:css": "node scripts/build-css.js",
    "minify:js": "terser dist/rojeru-toast.js -o dist/rojeru-toast.min.js --compress --mangle",
    "minify:css": "cleancss -o dist/rojeru-toast.min.css dist/rojeru-toast.css",
    "prepublishOnly": "npm run build && npm run minify:js && npm run minify:css",
    "dev": "nodemon --watch src --ext js,css --exec 'npm run build'"
  },
  "keywords": [
    "toast",
    "notification",
    "alert",
    "message",
    "popup",
    "ui",
    "javascript",
    "vanilla",
    "react",
    "vue",
    "angular",
    "svelte"
  ],
  "author": "Rogelio Urieta Camacho <rogelio.urieta@email.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/rojeru-toast.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/rojeru-toast/issues"
  },
  "homepage": "https://github.com/tu-usuario/rojeru-toast#readme",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.0",
    "clean-css-cli": "^5.6.2",
    "nodemon": "^3.0.1",
    "rollup": "^4.0.0",
    "terser": "^5.19.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ]
}